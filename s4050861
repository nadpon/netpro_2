    private void getPageButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_getPageButtonActionPerformed
        //Thread.setText(Thread.getText());
        gThread link1 = new gThread(url1.getText(), "Thread1");
        gThread link2 = new gThread(url2.getText(), "Thread2");
        link1.start();
        link2.start();
    }//GEN-LAST:event_getPageButtonActionPerformed
    public void showHeader(String URL, String Thread) {
         String url = URL;
        String thread = Thread;
        try {

            URL obj = new URL(url);
            URLConnection conn = obj.openConnection();
            Map<String, List<String>> map = conn.getHeaderFields();
            Header.setText(Header.getText() + thread + " :\n");

            for (Map.Entry<String, List<String>> entry : map.entrySet()) {
                Header.setText(Header.getText() + "Key : " + entry.getKey() + " ,Value : " + entry.getValue() + "\n");
            }
            Header.setText(Header.getText() + "\nGet HTTP Header For : " + thread + "\n");
            String server = conn.getHeaderField("Server");

            if (server == null) {
                Header.setText(Header.getText() + "'Server' is not found!\n");
            } else {
                Header.setText(Header.getText() + "Server : " + server + "\n");
            }
            Header.setText(Header.getText() + "Done\n________________________\n");
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
    public class gThread extends Thread{
        String link , threadNumber;
        int delay = 5000;
        
        public gThread(String url,String no){
            link = url;
            threadNumber = no;
        }
        
        @Override
        public void run(){
            try{
                Thread.setText(Thread.getText() + threadNumber + " : Start Get URL \n");
                if (threadNumber.equals("Thread1")) {
                    showURL1.setPage(link);

                }
                if (threadNumber.equals("Thread2")) {
                     showURL2.setPage(link);

                }
                Thread.setText(Thread.getText() + threadNumber + " : GetPage \n");
                Thread.setText(Thread.getText() + threadNumber + " : Print Header \n");
                showHeader(link,threadNumber);
                Thread.setText(Thread.getText() + threadNumber + " : Finish\n");
            }
            catch(IOException ex){
                 printf("cannot show");
            }
        }
        
    }
    
